# Copy this file to .env and update the values as needed
# cp env.template .env

# Postgres Database Configuration
# In case of running the backend through docker compose put the commented values of POSTGRES_DATABASE_LINK and MONGO_DATABASE_LINK below value
# In case of running the database through start_postgres.sh and start_mongodb.sh put the commented values of POSTGRES_DATABASE_LINK and MONGO_DATABASE_LINK below value

# POSTGRES_DATABASE_LINK=postgresql://myuser:mypassword@localhost:5432/mydatabase
POSTGRES_DATABASE_LINK=
# MONGO_DATABASE_LINK=mongodb://username:password@localhost:27017/database_name?authSource=database_name
MONGO_DATABASE_LINK=

# JWT Configuration (required)
JWT_SECRET=

# AWS S3 Configuration (optional - S3 features will be disabled if not provided)
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=
S3_BUCKET=

# Firebase Credentials
# Option 1: Use service account JSON file path
# FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./firebase-service-account.json
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=FIREBASE_SERVICE_ACCOUNT_KEY_PATH=./firebase-service-account.json
# Option 2: Use environment variables (less secure, development only)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Firebase Client SDK Configuration (for frontend - keep these for client-side use)

FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=
FIREBASE_MEASUREMENT_ID=

# Neo4j database

NEO4J_URI=
NEO4J_USERNAME=
NEO4J_PASSWORD=

# Dropbox Configuration (optional - Dropbox features will be disabled if not provided)
DROPBOX_ACCESS_TOKEN=

# Lighthouse APi Key
LIGHTHOUSE_API_KEY=276cc969.78a7a488b5774525bec561b4ca9de1af

# Application Configuration
NODE_ENV=

# Default port 3000
PORT=
